<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_splash"
    app:startDestination="@id/permission_fragment">

    <activity
        android:id="@+id/splash_activity"
        android:name="com.ssafy.challenmungs.presentation.common.SplashFragment"
        android:label="Splash Activity"
        tools:layout="@layout/fragment_splash" />

    <activity
        android:id="@+id/main_activity"
        android:name="com.ssafy.challenmungs.presentation.home.HomeActivity"
        android:label="Main Activity"
        tools:layout="@layout/activity_home" />

    <activity
        android:id="@+id/auth_activity"
        android:name="com.ssafy.challenmungs.presentation.auth.AuthActivity"
        android:label="Auth Activity"
        tools:layout="@layout/activity_auth" />

    <fragment
        android:id="@+id/permission_fragment"
        android:name="com.ssafy.challenmungs.presentation.common.PermissionFragment"
        android:label="Permission Fragment"
        tools:layout="@layout/fragment_permission" />

</navigation>