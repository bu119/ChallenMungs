<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.ssafy.challenmungs.presentation.common.SplashFragment"
        android:label="Splash Fragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_to_permission_fragment"
            app:destination="@id/permission_fragment" />

        <action
            android:id="@+id/action_to_auth_activity"
            app:destination="@id/auth_activity" />

        <action
            android:id="@+id/action_to_home_activity"
            app:destination="@id/home_activity" />
    </fragment>

    <activity
        android:id="@+id/home_activity"
        android:name="com.ssafy.challenmungs.presentation.home.HomeActivity"
        android:label="Home Activity"
        tools:layout="@layout/activity_home" />

    <activity
        android:id="@+id/auth_activity"
        android:name="com.ssafy.challenmungs.presentation.auth.AuthActivity"
        android:label="Auth Activity"
        tools:layout="@layout/activity_auth" />

    <fragment
        android:id="@+id/permission_fragment"
        android:name="com.ssafy.challenmungs.presentation.common.PermissionFragment"
        android:label="Permission Fragment"
        tools:layout="@layout/fragment_permission" />

</navigation>